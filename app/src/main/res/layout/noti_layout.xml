<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/btn_item_list"
              android:orientation="horizontal">
    <ImageView
        android:id="@+id/imgNoti"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@drawable/default_nhaccuatui"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/notiNameMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:singleLine="true"
                android:text="Name of Song"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/notiSingerMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="Singer"
                android:textColor="#ffffff"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#504e4e"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnNotiPlay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1.5"
                android:background="@drawable/custom_bg"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:src="@drawable/btn_noti_pause"/>

            <ImageView
                android:id="@+id/btnNotiNext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_bg"
                android:layout_weight="1"
                android:paddingBottom="18dp"
                android:paddingRight="5dp"
                android:paddingTop="18dp"
                android:src="@drawable/btn_noti_next"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorList"/>
            <ImageView
                android:id="@+id/btnNotiClose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:paddingBottom="18dp"
                android:paddingTop="18dp"
                android:background="@drawable/custom_bg"
                android:src="@drawable/btn_noti_close"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>