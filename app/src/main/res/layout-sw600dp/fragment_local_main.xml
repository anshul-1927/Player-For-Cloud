<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/btn_sel"
        android:elevation="15dp"
        android:orientation="horizontal"
        android:paddingBottom="3dp">

        <ImageView
            android:id="@+id/artM"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/default_nhaccuatui"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <dev.datvt.cloudtracks.utils.CustomFontTextView
                android:id="@+id/nameM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Menu Title"
                android:textColor="@drawable/custom_text_color_black"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <dev.datvt.cloudtracks.utils.CustomFontTextView
                android:id="@+id/noM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Songs"
                android:layout_marginTop="5dp"
                android:textColor="@drawable/custom_text_color_gray"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/shuffleM"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:src="@drawable/ic_shuffle"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/delM"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_delete"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>