<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/player"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/trackholder"
            android:layout_marginTop="12dp"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <dev.datvt.cloudtracks.utils.CustomFontTextView
                android:id="@+id/titleSong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"/>

            <dev.datvt.cloudtracks.utils.CustomFontTextView
                android:id="@+id/titleSinger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/titleSong"
                android:layout_alignRight="@+id/titleSong"
                android:layout_below="@+id/titleSong"
                android:layout_marginTop="6dp"
                android:singleLine="true"
                android:textSize="25sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorWhite"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">
            <dev.datvt.cloudtracks.utils.CircleImageView
                android:id="@+id/art_im"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="420dp"
                android:src="@drawable/icon_disc_blue"/>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
